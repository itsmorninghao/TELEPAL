# ============================================
# Telegram Bot 配置
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# PostgreSQL 数据库配置
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=telepal_db
POSTGRES_USER=telepal_user
POSTGRES_PASSWORD=your_password_here

# ============================================
# LLM 配置
# ============================================
# OpenAI 兼容格式的 API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1  # 兼容 OpenAI 格式的模型 API 地址
OPENAI_MODEL=gpt-4o-mini  # 或 gpt-4, gpt-3.5-turbo

# 示例：使用本地部署的模型
# OPENAI_BASE_URL=http://localhost:8000/v1
# OPENAI_MODEL=your-local-model-name

# ============================================
# 搜索工具配置
# ============================================
# Tavily Search API
TAVILY_API_KEY=your_tavily_api_key_here

# ============================================
# 应用配置
# ============================================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 是否启用"正在输入"提示（使用 send_chat_action 显示机器人正在输入状态）
ENABLE_TYPING_ACTION=true

# 最大消息长度 (Telegram 限制为 4096)
MAX_MESSAGE_LENGTH=4000

# State 中最大对话条数（包括用户消息和 AI 回复）
# 超过此数量时，将只保留最新的对话
MAX_MESSAGES_IN_STATE=50

# ============================================
# 鉴权配置
# ============================================
# 初始超管用户 ID (Telegram User ID，多个用逗号分隔)
# 注意：这些用户会在首次启动时自动加入白名单（私聊和群组）
INITIAL_SUPER_ADMINS=123456789,987654321

# ============================================
# 嵌入模型配置
# ============================================
EMBEDDING_API_KEY=your_embedding_api_key_here
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMS=768
